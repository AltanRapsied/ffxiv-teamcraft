{
  "name": "teamcraft",
  "version": "3.0.0-beta.3",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "node ./build/prebuild.js && ng serve --host 0.0.0.0",
    "build:prod": "node ./build/prebuild.js && ng build -prod",
    "build:beta": "node ./build/prebuild.js && ng build --aot --target=production --env=beta",
    "standard-version": "standard-version",
    "standard-version:dry": "standard-version --dry-run",
    "release:git": "npm run standard-version && git push --follow-tags origin master",
    "release:beta": "npm run standard-version -- --prerelease beta && git push --follow-tags origin beta",
    "deploy": "npm run release:git && npm run build:prod && firebase deploy",
    "deploy:beta": "npm run release:beta && npm run build:beta && firebase deploy -P beta",
    "test": "node ./build/prebuild.js && ng test --single-run",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "extract": "ngx-translate-extract -i ./src --output ./src/assets/i18n/fr.json --output ./src/assets/i18n/de.json --output ./src/assets/i18n/en.json --output ./src/assets/i18n/ja.json --clean --sort --format namespaced-json",
    "commitmsg": "validate-commit-msg",
    "prerelease": "npm test",
    "commit": "git-cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.1",
    "@angular/cdk": "^5.0.0-rc0",
    "@angular/common": "^5.0.1",
    "@angular/compiler": "^5.0.1",
    "@angular/core": "^5.0.1",
    "@angular/flex-layout": "2.0.0-beta.10",
    "@angular/forms": "^5.0.1",
    "@angular/http": "^5.0.1",
    "@angular/material": "^5.0.0-rc0",
    "@angular/platform-browser": "^5.0.1",
    "@angular/platform-browser-dynamic": "^5.0.1",
    "@angular/router": "^5.0.1",
    "@kaiu/ng-serializer": "1.1.0",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^4.1.1",
    "@ngrx/store": "^4.1.1",
    "@ngx-translate/core": "^8.0.0",
    "@ngx-translate/http-loader": "^2.0.0",
    "@types/jwt-decode": "^1.4.30",
    "@types/semver": "^5.4.0",
    "angularfire2": "5.0.0-rc.3",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.1",
    "firebase": "^4.6.2",
    "hammerjs": "^2.0.8",
    "intl": "^1.2.5",
    "jwt-decode": "^2.2.0",
    "ngx-clipboard": "^8.1.1",
    "rxjs": "^5.4.3",
    "semver": "^5.4.1",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.0.1",
    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.90",
    "codelyzer": "^4.0.1",
    "colors": "latest",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.5.2",
    "protractor": "~5.1.0",
    "standard-version": "^4.2.0",
    "ts-node": "~2.0.0",
    "tslint": "^5.8.0",
    "typescript": "2.4.2",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
